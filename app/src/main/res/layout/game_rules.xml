<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_back"
    android:backgroundTint="@null"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Title of the Game Rules -->
    <TextView
        android:id="@+id/title_game_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_rules"
        android:fontFamily="@font/ptsans_bold"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <!-- ScrollView for the game rules content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- General Rules -->
            <TextView
                android:id="@+id/general_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Rules:"
                android:fontFamily="@font/ptsans_bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/general_rules_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Tic Tac Toe is a two-player game: Player 1 (X) and Player 2 (O).\n2. Players take turns placing their symbol on the board.\n3. The goal is to align a line of identical symbols in a row, column, or diagonal."
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- 3x3 Board Rules -->
            <TextView
                android:id="@+id/rules_3x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3x3 Board Rules:"
                android:fontFamily="@font/ptsans_bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/rules_3x3_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The first player to create a line of 3 identical symbols (X or O) in a row, column, or diagonal wins the game."
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- 6x6 Board Rules -->
            <TextView
                android:id="@+id/rules_6x6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6x6 Board Rules:"
                android:fontFamily="@font/ptsans_bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/rules_6x6_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The first player to create a line of 4 identical symbols (X or O) in a row, column, or diagonal wins the game."
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- 9x9 Board Rules -->
            <TextView
                android:id="@+id/rules_9x9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9x9 Board Rules:"
                android:fontFamily="@font/ptsans_bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/rules_9x9_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The first player to create a line of 5 identical symbols (X or O) in a row, column, or diagonal wins the game."
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- Additional Rules -->
            <TextView
                android:id="@+id/additional_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Rules:"
                android:fontFamily="@font/ptsans_bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/additional_rules_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• If the board is completely filled and no player wins, the game ends in a tie.\n• Players alternate turns until a winner is determined."
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
